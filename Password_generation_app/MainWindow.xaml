<Window x:Class="Password_generation_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_generation_app"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="550" Width="800">
    <Grid Background="#ffdadada">
        <Border MinWidth="450" Margin="15" Background="#fff" VerticalAlignment="Center"  Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Генератор паролей" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0" Grid.Row="0">
                        <TextBlock Text="Дмина пароля:" HorizontalAlignment="Left"  FontSize="15"/>
                    </Border>
                    <Border Grid.Column="0" Grid.Row="1">
                        <TextBox x:Name="textBoxNumber" materialDesign:HintAssist.Hint="Диапозон 4 до 8" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="0">
                        <TextBlock Text="Генерировать из символов:" HorizontalAlignment="Left" FontSize="15"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1">
                        <TextBox x:Name="textBoxLeter" materialDesign:HintAssist.Hint="Диапозон 0 до 50" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Border>
                </Grid>
                
            </StackPanel>
        </Border>
        
        
    </Grid>
</Window>
